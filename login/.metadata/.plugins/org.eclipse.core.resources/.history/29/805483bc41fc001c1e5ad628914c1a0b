function loginChk() {
	var id = document.getElementById("login_id);
	var pw = document.getElementById("login_pw);
	
	if (id.value == "") {
		alert("아이디를 입력해주세요.");
		id.focus();
		return false;
	}
	else if (pw.value == "") {
		alert("비밀번호를 입력해주세요.");
		pw.focus();
		return false;
	}
	else {
		submit();
	}